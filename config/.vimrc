set nocompatible

syntax on

set noerrorbells
set rnu

set tabstop=2 softtabstop=2
set shiftwidth=2
set expandtab
set smartindent
set autoindent

set relativenumber

set linebreak
set wrap
set breakindent
set breakindentopt=shift:0,sbr
set showbreak=>

set hlsearch
set ignorecase
set incsearch
set smartcase

set noswapfile
set nobackup
set writebackup
set undodir=~/.vim/undodir
set undofile

set background=dark
set colorcolumn=100
highlight ColorColumn ctermbg=0 guibg=lightgrey

